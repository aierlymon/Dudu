<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="3dip" />

            <gradient
                android:angle="0"
                android:centerY="0.75"
                android:endColor="@color/source_color"
                android:startColor="@color/source_color" />
        </shape>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="3dip" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/color_text_selected"
                    android:startColor="@color/color_text_selected" />
            </shape>
        </clip>
    </item>

</layer-list>