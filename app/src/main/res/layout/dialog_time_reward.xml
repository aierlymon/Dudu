<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ban_toumin">


    <RelativeLayout
        android:id="@+id/dialog_parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/dialog_time_reward_back"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">


        <TextView
            android:id="@+id/tx_time_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/double_left_right_marigin"
            android:text="限时0秒领取"
            android:textColor="@color/dialog_time_reward"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/x22"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y159"
            android:layout_below="@+id/tx_time_reward"
            android:layout_margin="@dimen/double_left_right_marigin"
            android:background="#0f0" />

        <TextView
            android:id="@+id/tx_getit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y75"
            android:text="领"
            android:textColor="@color/dialog_time_reward"
            android:textSize="@dimen/x40"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/close"
        android:layout_width="@dimen/x26"
        android:layout_height="@dimen/x26"
        android:layout_marginBottom="@dimen/left_right_marigin"
        android:background="@mipmap/close"
        app:layout_constraintBottom_toTopOf="@+id/dialog_parent"
        app:layout_constraintRight_toRightOf="@+id/dialog_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>