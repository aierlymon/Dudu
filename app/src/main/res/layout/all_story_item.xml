<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_story_back"
    android:layout_marginLeft="@dimen/double_common_item_marigin"
    android:layout_marginRight="@dimen/double_common_item_marigin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/all_story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/font_px14"
        android:layout_margin="@dimen/left_right_marigin"
        android:textColor="@color/content_color"
        android:text="专题故事"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/daohang_clolor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_item_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>