<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y140"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/loan_banner_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/my_encourage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的现金奖励：520元"
            android:textSize="@dimen/font_px10"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/left_right_marigin"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_exchange"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y21"
            android:textSize="@dimen/font_px10"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/left_right_marigin"
            android:background="@drawable/loan_duicash_button"
            android:text="兑换现金"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tx_my_dou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8854"
            android:textColor="@color/white"
            android:textSize="@dimen/font_px28"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/tx_my_dou_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的现金豆"
            android:textColor="@color/white"
            android:textSize="@dimen/font_px10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/tx_my_dou"
            app:layout_constraintVertical_bias="0.25" />
        
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.5"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/tx_mytoday_dou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1545"
            android:textColor="@color/white"
            android:textSize="@dimen/font_px28"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/tx_mytoday_dou_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日现金豆"
            android:textColor="@color/white"
            android:textSize="@dimen/font_px10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tx_my_dou"
            app:layout_constraintVertical_bias="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/loan_yinyin_back"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x20"
                android:layout_marginLeft="@dimen/left_right_marigin"
                android:src="@drawable/hongbao"/>

            <TextView
                android:id="@+id/tx_time_getmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_px10"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_margin="@dimen/x6"
                android:text="距离下次领红包05:46"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tx_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已签到五天，连续签到7天有奖"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/left_right_marigin"
            android:textSize="@dimen/font_px10"/>

    </RelativeLayout>
</LinearLayout>