<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--外部用来填充的颜色-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/daohang_clolor" />

    <com.dudu.baselib.widget.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        app:use_type="use_padding_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/special_myhead"
                layout="@layout/toolbarhead"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height" />

            
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/special_refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    app:srlAccentColor="#000" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/special_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/left_right_marigin"
                    android:layout_marginRight="@dimen/left_right_marigin" />

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlPrimaryColor="#fff" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>


    </com.dudu.baselib.widget.StatusBarHeightView>


</RelativeLayout>