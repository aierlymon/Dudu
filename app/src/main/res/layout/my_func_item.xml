<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y40"
    android:background="@drawable/fra_my_menuitem">


    <ImageView
        android:id="@+id/img_func_icon"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/left_right_marigin"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tx_func_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/left_right_marigin"
        android:layout_toRightOf="@+id/img_func_icon"
        android:text="你哈"
        android:textColor="@color/mine_menu_color"
        android:textSize="@dimen/font_px16" />

    <View
        android:id="@+id/bottom_index"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/recommand_mine_inteindex"
        android:layout_marginLeft="@dimen/double_left_right_marigin"
        android:layout_marginRight="@dimen/left_right_marigin"/>
</RelativeLayout>